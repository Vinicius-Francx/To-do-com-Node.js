<div id="home-header">
    {{#if search}}
        <h1 id="title1">Você está buscando por: <span id="busca">{{search}}</span></h1>
        {{#if tarefasqty}}
            <p>Foram encontradas <span id="busca">{{tarefasqty}}</span> tarefa(s)</p>
        {{else}}
            <p>Nenhuma tarefa foi encontrada para o termo <span id="busca">{{search}}</span></p>
        {{/if}}
    {{else}}
        <h1 id="title1">Minhas Tarefas</h1>
    {{/if}}
    <form action="/tarefas" method="GET">
        <input type="text" name="search" placeholder="Está buscando por algo?">
        <input type="submit" class="button" value="Buscar">
    </form>
    <div id="order-container">
        <a>Para limpar a pesquisa: </a>
